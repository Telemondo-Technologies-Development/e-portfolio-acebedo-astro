---

<header class="header">
  <div class="container header-content">
    <a href="/" class="logo">
      <span class="logo-mark">â—†</span>
      <span class="logo-text">{portfolio.name}</span>
    </a>
    
    <nav class="nav">
      <span class="nav-underline"></span>

      <a href="#home" class="nav-link" data-section="home">Home</a>
      <a href="#about" class="nav-link" data-section="about">About</a>
      <a href="#skills" class="nav-link" data-section="skills">Skills</a>
      <a href="#projects" class="nav-link" data-section="projects">Projects</a>
      <a href="#contact" class="nav-link" data-section="contact">Contact</a>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    background-color: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    z-index: 100;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    text-decoration: none;
  }

  .logo-mark {
    color: var(--color-accent);
    font-size: 1.5rem;
  }

  .nav {
    display: flex;
    gap: 2rem;
    align-items: center;
    position: relative;
  }

  .nav-underline {
  position: absolute;
  bottom: 0;
  height: 2px;
  background-color: var(--color-accent);
  will-change: transform, width;
  }


  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text-light);
    transition: var(--transition);
    position: relative;
    padding-bottom: 0.4rem;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-accent);
  }

  .nav-link.active::after {
    content: "";
    position: absolute;
    bottom: -0.25rem;
    left: 50%;
    bottom: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent);
    transform: translateX(-50%);
    transition: width 0.3s ease;
  }

  .nav-link.active::after,
  .nav-link:hover::after {
    width: 100%;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
    }

    .nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }
  }
</style>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    const nav = document.querySelector(".nav");
    const navLinks = document.querySelectorAll(".nav-link");
    const sections = document.querySelectorAll("section[id]");
    const underline = document.querySelector(".nav-underline");

    if (!nav || !underline || !sections.length) return;

    let currentX = 0;
    let currentW = 0;
    let targetX = 0;
    let targetW = 0;
    let velocityX = 0;
    let velocityW = 0;

    const stiffness = 0.05; // lower = more fluid
    const damping = 0.45;   // lower = more bouncy

    function animate() {
      velocityX = velocityX * damping + (targetX - currentX) * stiffness;
      velocityW = velocityW * damping + (targetW - currentW) * stiffness;

      currentX += velocityX;
      currentW += velocityW;

      underline.style.transform = `translateX(${currentX}px)`;
      underline.style.width = `${currentW}px`;

      requestAnimationFrame(animate);
    }

    function setTarget(link) {
      const linkRect = link.getBoundingClientRect();
      const navRect = nav.getBoundingClientRect();

      targetX = linkRect.left - navRect.left;
      targetW = linkRect.width;
    }

    // Hover interaction
    navLinks.forEach((link) => {
      link.addEventListener("mouseenter", () => setTarget(link));
    });

    // Scroll spy
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const activeLink = [...navLinks].find(
              (link) => link.dataset.section === entry.target.id
            );

            if (activeLink) setTarget(activeLink);
          }
        });
      },
      {
        rootMargin: "-40% 0px -50% 0px",
        threshold: 0
      }
    );

    sections.forEach((section) => observer.observe(section));

    // Initial position
    const initialLink =
      [...navLinks].find((link) => link.dataset.section === "home") || navLinks[0];

    if (initialLink) {
      const rect = initialLink.getBoundingClientRect();
      const navRect = nav.getBoundingClientRect();

      currentX = targetX = rect.left - navRect.left;
      currentW = targetW = rect.width;

      underline.style.transform = `translateX(${currentX}px)`;
      underline.style.width = `${currentW}px`;

      requestAnimationFrame(animate);
    }

    // Resize handling
    window.addEventListener("resize", () => {
      const activeLink = document.querySelector(".nav-link.active");
      if (activeLink) setTarget(activeLink);
    });
  });
</script>


